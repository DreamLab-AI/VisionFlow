<?xml version="1.0"?>
<Ontology xmlns="http://www.w3.org/2002/07/owl#"
     xml:base="http://example.org/test"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:xml="http://www.w3.org/XML/1998/namespace"
     xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
     xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
     ontologyIRI="http://example.org/test">

    <!-- Test Ontology for Semantic Intelligence Validation -->

    <!-- Annotation Properties -->
    <AnnotationProperty rdf:about="http://www.w3.org/2000/01/rdf-schema#comment"/>
    <AnnotationProperty rdf:about="http://www.w3.org/2000/01/rdf-schema#label"/>

    <!-- Object Properties -->
    <ObjectProperty rdf:about="http://example.org/test#hasEmployee">
        <rdfs:label>has employee</rdfs:label>
        <rdfs:domain rdf:resource="http://example.org/test#Organization"/>
        <rdfs:range rdf:resource="http://example.org/test#Person"/>
    </ObjectProperty>

    <ObjectProperty rdf:about="http://example.org/test#worksFor">
        <rdfs:label>works for</rdfs:label>
        <rdfs:domain rdf:resource="http://example.org/test#Person"/>
        <rdfs:range rdf:resource="http://example.org/test#Organization"/>
        <inverseOf rdf:resource="http://example.org/test#hasEmployee"/>
    </ObjectProperty>

    <ObjectProperty rdf:about="http://example.org/test#manages">
        <rdfs:label>manages</rdfs:label>
        <rdfs:domain rdf:resource="http://example.org/test#Manager"/>
        <rdfs:range rdf:resource="http://example.org/test#Person"/>
        <rdfs:subPropertyOf rdf:resource="http://example.org/test#hasEmployee"/>
    </ObjectProperty>

    <!-- Classes -->
    <Class rdf:about="http://example.org/test#Entity">
        <rdfs:label>Entity</rdfs:label>
        <rdfs:comment>Top-level entity class</rdfs:comment>
    </Class>

    <Class rdf:about="http://example.org/test#Person">
        <rdfs:label>Person</rdfs:label>
        <rdfs:comment>A human being</rdfs:comment>
        <rdfs:subClassOf rdf:resource="http://example.org/test#Entity"/>
    </Class>

    <Class rdf:about="http://example.org/test#Organization">
        <rdfs:label>Organization</rdfs:label>
        <rdfs:comment>An organization</rdfs:comment>
        <rdfs:subClassOf rdf:resource="http://example.org/test#Entity"/>
        <disjointWith rdf:resource="http://example.org/test#Person"/>
    </Class>

    <Class rdf:about="http://example.org/test#Company">
        <rdfs:label>Company</rdfs:label>
        <rdfs:comment>A commercial organization</rdfs:comment>
        <rdfs:subClassOf rdf:resource="http://example.org/test#Organization"/>
    </Class>

    <Class rdf:about="http://example.org/test#NonProfit">
        <rdfs:label>Non-Profit</rdfs:label>
        <rdfs:comment>A non-profit organization</rdfs:comment>
        <rdfs:subClassOf rdf:resource="http://example.org/test#Organization"/>
        <disjointWith rdf:resource="http://example.org/test#Company"/>
    </Class>

    <Class rdf:about="http://example.org/test#Employee">
        <rdfs:label>Employee</rdfs:label>
        <rdfs:comment>A person who works for an organization</rdfs:comment>
        <rdfs:subClassOf rdf:resource="http://example.org/test#Person"/>
    </Class>

    <Class rdf:about="http://example.org/test#Manager">
        <rdfs:label>Manager</rdfs:label>
        <rdfs:comment>An employee who manages others</rdfs:comment>
        <rdfs:subClassOf rdf:resource="http://example.org/test#Employee"/>
    </Class>

    <Class rdf:about="http://example.org/test#Executive">
        <rdfs:label>Executive</rdfs:label>
        <rdfs:comment>A senior manager</rdfs:comment>
        <rdfs:subClassOf rdf:resource="http://example.org/test#Manager"/>
    </Class>

    <!-- Equivalent Class Definition -->
    <Class rdf:about="http://example.org/test#Worker">
        <rdfs:label>Worker</rdfs:label>
        <equivalentClass rdf:resource="http://example.org/test#Employee"/>
    </Class>

    <!-- Complex Class Expression using Restriction -->
    <Class rdf:about="http://example.org/test#EmployedPerson">
        <rdfs:label>Employed Person</rdfs:label>
        <equivalentClass>
            <Class>
                <intersectionOf rdf:parseType="Collection">
                    <Class rdf:about="http://example.org/test#Person"/>
                    <Restriction>
                        <onProperty rdf:resource="http://example.org/test#worksFor"/>
                        <someValuesFrom rdf:resource="http://example.org/test#Organization"/>
                    </Restriction>
                </intersectionOf>
            </Class>
        </equivalentClass>
    </Class>

    <!-- Disjoint Classes Declaration -->
    <AllDisjointClasses>
        <members rdf:parseType="Collection">
            <Class rdf:about="http://example.org/test#Company"/>
            <Class rdf:about="http://example.org/test#NonProfit"/>
        </members>
    </AllDisjointClasses>

    <!-- Test for transitive inference: Executive -> Manager -> Employee -> Person -> Entity -->
    <!-- Test for disjoint classes: Person and Organization should repel -->
    <!-- Test for equivalent classes: Worker and Employee should be identical -->
    <!-- Test for inverse properties: hasEmployee and worksFor -->
</Ontology>
