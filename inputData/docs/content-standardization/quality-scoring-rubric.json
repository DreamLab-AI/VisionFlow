{
  "version": "1.0.0",
  "description": "Quality scoring rubric for ontology markdown files - body content assessment",
  "last_updated": "2025-11-21",
  "scoring_methodology": "Weighted criteria system with max score of 100",
  
  "scoring_criteria": {
    "completeness": {
      "weight": 30,
      "description": "Presence and quality of required sections",
      "sub_criteria": [
        {
          "criterion": "ontology_block_complete",
          "points": 5,
          "description": "OntologyBlock fully populated with all required fields"
        },
        {
          "criterion": "definition_present",
          "points": 5,
          "description": "Definition section exists with content"
        },
        {
          "criterion": "definition_depth",
          "points": 5,
          "description": "Definition is 200+ words with technical detail and context"
        },
        {
          "criterion": "current_landscape",
          "points": 10,
          "description": "Current Landscape (2025) section with substantial domain-specific content"
        },
        {
          "criterion": "metadata_section",
          "points": 5,
          "description": "Metadata termination section present and complete"
        }
      ]
    },
    
    "depth": {
      "weight": 25,
      "description": "Technical detail and substantive content",
      "sub_criteria": [
        {
          "criterion": "technical_detail",
          "points": 10,
          "description": "Appropriate technical depth for topic (specifications, parameters, capabilities)"
        },
        {
          "criterion": "examples_applications",
          "points": 10,
          "description": "Real-world examples, use cases, or applications provided"
        },
        {
          "criterion": "sources_cited",
          "points": 5,
          "description": "Standards, papers, or authoritative sources referenced"
        }
      ]
    },
    
    "formatting": {
      "weight": 20,
      "description": "Adherence to Logseq and markdown conventions",
      "sub_criteria": [
        {
          "criterion": "logseq_conventions",
          "points": 5,
          "description": "Proper use of Logseq features (bullets, properties, collapsed blocks)"
        },
        {
          "criterion": "markdown_structure",
          "points": 5,
          "description": "Clean markdown with proper headings, lists, emphasis"
        },
        {
          "criterion": "code_blocks",
          "points": 5,
          "description": "Code blocks properly formatted with language specification"
        },
        {
          "criterion": "wiki_links",
          "points": 5,
          "description": "Appropriate use of [[wiki links]] for cross-referencing"
        }
      ]
    },
    
    "uk_english_compliance": {
      "weight": 10,
      "description": "Consistent use of UK English spelling and style",
      "sub_criteria": [
        {
          "criterion": "uk_spellings",
          "points": 5,
          "description": "UK spellings used (colour, organise, analyse, centre)"
        },
        {
          "criterion": "no_us_spellings",
          "points": 5,
          "description": "No US spelling errors in body text"
        }
      ]
    },
    
    "wiki_linking_density": {
      "weight": 15,
      "description": "Quality and quantity of knowledge graph connections",
      "sub_criteria": [
        {
          "criterion": "link_quantity",
          "points": 10,
          "description": "20+ relevant wiki links to related concepts",
          "scoring_scale": {
            "0-5_links": 2,
            "6-10_links": 4,
            "11-15_links": 6,
            "16-20_links": 8,
            "20+_links": 10
          }
        },
        {
          "criterion": "parent_links",
          "points": 3,
          "description": "Links to parent concepts (is-subclass-of relationships)"
        },
        {
          "criterion": "cross_domain_bridges",
          "points": 2,
          "description": "Cross-domain links demonstrating interdisciplinary connections"
        }
      ]
    }
  },
  
  "score_ranges": {
    "excellent": {
      "range": [90, 100],
      "label": "Excellent",
      "description": "Exemplary file meeting all quality standards with rich detail, perfect formatting, and comprehensive coverage. Serves as model for other files."
    },
    "good": {
      "range": [75, 89],
      "label": "Good",
      "description": "High-quality file meeting most standards with minor gaps. Suitable for publication with minimal revisions."
    },
    "acceptable": {
      "range": [60, 74],
      "label": "Acceptable",
      "description": "Adequate file meeting minimum standards but with notable gaps. Functional but would benefit from expansion and improvement."
    },
    "poor": {
      "range": [40, 59],
      "label": "Poor",
      "description": "Below standard file with significant gaps in content, depth, or formatting. Requires substantial revision."
    },
    "critical": {
      "range": [0, 39],
      "label": "Critical",
      "description": "Severely deficient file, essentially a stub or placeholder. Requires complete rewrite or removal."
    }
  },
  
  "pattern_typical_scores": {
    "pattern_a_complete": {
      "typical_range": [80, 95],
      "description": "Complete files with all sections, rich detail, UK context, and proper formatting"
    },
    "pattern_b_technical_only": {
      "typical_range": [70, 85],
      "description": "Strong technical content but missing narrative and contextual sections"
    },
    "pattern_c_minimal": {
      "typical_range": [40, 59],
      "description": "Basic definition only, insufficient depth and detail"
    },
    "pattern_d_incomplete": {
      "typical_range": [50, 70],
      "description": "Variable quality with some sections strong, others missing or template-based"
    },
    "pattern_e_rich_media": {
      "typical_range": [75, 90],
      "description": "Strong narrative with multimedia, tutorial style"
    },
    "pattern_f_stub": {
      "typical_range": [0, 30],
      "description": "Essentially empty placeholder files"
    }
  },
  
  "scoring_methodology_details": {
    "calculation": "Sum of weighted scores from all criteria",
    "maximum_score": 100,
    "passing_score": 60,
    "recommended_target": 75,
    "excellence_threshold": 90
  },
  
