{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "worker": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-console": ["error", {
      "allow": ["info", "warn", "error", "debug"]
    }],
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/no-unused-vars": ["warn", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }]
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "*.js"
  ]
}
