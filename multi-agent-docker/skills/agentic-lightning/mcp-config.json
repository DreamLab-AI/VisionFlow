{
  "name": "agentic-lightning",
  "version": "1.0.0",
  "description": "Agent Lightning RL training with AgentDB + RuVector",
  "command": "python",
  "args": ["server.py"],
  "env": {
    "AGENTDB_PATH": "./agentdb.db",
    "LIGHTNING_DEFAULT_ALGO": "ppo",
    "RUVECTOR_GNN_ENABLED": "true"
  },
  "dependencies": {
    "npm": ["agentdb@^2.0.0", "ruvector@^0.1.24"],
    "python": ["mcp>=1.0.0"]
  }
}
