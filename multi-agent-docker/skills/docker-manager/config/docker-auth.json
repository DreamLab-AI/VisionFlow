{
  "version": "1.0",
  "description": "Docker Manager authentication and container mapping configuration",
  "containers": {
    "visionflow": {
      "name": "visionflow_container",
      "network": "docker_ragflow",
      "image_prefix": "ar-ai-knowledge-graph-webxr",
      "compose_file": "docker-compose.yml",
      "health_check": {
        "enabled": true,
        "interval": 30,
        "timeout": 10,
        "retries": 3
      },
      "ports": {
        "dev": {
          "3001": "Vite dev server",
          "4000": "Web UI (mapped to 3001)"
        },
        "production": {
          "4000": "Production web UI"
        }
      }
    },
    "agentic": {
      "name": "agentic-workstation",
      "network": "docker_ragflow",
      "image_prefix": "multi-agent-docker-agentic-workstation",
      "ports": {
        "22": "SSH",
        "5901": "VNC",
        "8080": "code-server",
        "9090": "Management API",
        "9600": "Z.AI Service (internal)"
      }
    }
  },
  "docker_socket": "/var/run/docker.sock",
  "project_path": "/home/devuser/workspace/project",
  "launch_script": "scripts/launch.sh",
  "profiles": {
    "dev": {
      "description": "Development environment",
      "env_vars": {
        "NODE_ENV": "development",
        "VITE_DEV": "true"
      }
    },
    "production": {
      "description": "Production environment",
      "env_vars": {
        "NODE_ENV": "production"
      }
    }
  },
  "auth": {
    "method": "docker_socket",
    "docker_group": "docker",
    "user": "devuser",
    "uid": 1000
  },
  "retry_policy": {
    "max_retries": 3,
    "backoff_multiplier": 2,
    "initial_delay_ms": 1000,
    "max_delay_ms": 10000
  },
  "logging": {
    "level": "info",
    "format": "json",
    "output": "/var/log/docker-manager.log"
  },
  "features": {
    "auto_discovery": true,
    "health_monitoring": true,
    "resource_tracking": true,
    "log_streaming": true,
    "network_inspection": true
  }
}
