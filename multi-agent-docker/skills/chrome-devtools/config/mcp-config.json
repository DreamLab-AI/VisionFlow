{
  "version": "1.0",
  "description": "Chrome DevTools MCP Server Configuration",
  "mcpServers": {
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "env": {
        "CHROME_PATH": "/usr/bin/chromium",
        "DISPLAY": ":1",
        "CHROME_USER_DATA_DIR": "/tmp/chrome-devtools-mcp",
        "CHROME_FLAGS": "--headless,--disable-gpu,--no-sandbox,--disable-dev-shm-usage,--remote-debugging-port=9222"
      },
      "disabled": false,
      "alwaysAllow": [
        "performance_start_trace",
        "network_get_requests",
        "console_get_messages",
        "dom_query_selector",
        "page_screenshot"
      ]
    }
  },
  "chrome": {
    "binary_path": "/usr/bin/chromium",
    "user_data_dir": "/tmp/chrome-devtools-mcp",
    "remote_debugging_port": 9222,
    "headless": true,
    "flags": [
      "--headless",
      "--disable-gpu",
      "--no-sandbox",
      "--disable-dev-shm-usage",
      "--disable-web-security",
      "--disable-features=IsolateOrigins,site-per-process",
      "--remote-debugging-port=9222"
    ],
    "launch_timeout_ms": 30000,
    "session_timeout_ms": 1800000
  },
  "display": {
    "x11_display": ":1",
    "vnc_port": 5901,
    "resolution": "1920x1080x24"
  },
  "permissions": {
    "allow_javascript_execution": true,
    "allow_navigation": true,
    "allow_screenshot": true,
    "allow_network_inspection": true,
    "allow_dom_access": true,
    "allow_performance_trace": true
  },
  "limits": {
    "max_trace_duration_ms": 60000,
    "max_screenshot_size_mb": 10,
    "max_concurrent_sessions": 3,
    "max_console_messages": 1000,
    "max_network_requests": 500
  },
  "cleanup": {
    "clear_user_data_on_exit": true,
    "kill_orphaned_processes": true,
    "cleanup_interval_ms": 300000
  }
}
