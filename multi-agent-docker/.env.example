# Agentic Flow + Z.AI Docker Environment Configuration
# Copy this file to .env and configure your API keys

# ============================================================================
# API Keys (At least one provider required)
# ============================================================================

# Anthropic Claude (recommended)
ANTHROPIC_API_KEY=

# Z.AI (required for claude-zai service)
# Get your key from https://z.ai/
ANTHROPIC_BASE_URL=https://api.z.ai/api/anthropic

# OpenAI
OPENAI_API_KEY=

# Google Gemini
GOOGLE_GEMINI_API_KEY=

# OpenRouter (multi-model access)
OPENROUTER_API_KEY=

# GitHub Token (for GitHub integration features)
GITHUB_TOKEN=

# Context7 (optional)
CONTEXT7_API_KEY=

# Brave Search (optional)
BRAVE_API_KEY=

# ============================================================================
# Management API Configuration
# ============================================================================

MANAGEMENT_API_KEY=change-this-secret-key
MANAGEMENT_API_PORT=9090
MANAGEMENT_API_HOST=0.0.0.0

# ============================================================================
# Model Router Configuration
# ============================================================================

ROUTER_MODE=performance
PRIMARY_PROVIDER=gemini
FALLBACK_CHAIN=gemini,openai,claude,openrouter

# ============================================================================
# GPU Configuration
# ============================================================================

GPU_ACCELERATION=true
CUDA_VISIBLE_DEVICES=all

# ============================================================================
# Optional Services
# ============================================================================

# Desktop environment (VNC/noVNC)
ENABLE_DESKTOP=true

# VS Code Server
ENABLE_CODE_SERVER=false

# ============================================================================
# System Configuration
# ============================================================================

LOG_LEVEL=info
NODE_ENV=production

# Claude-ZAI Worker Configuration
CLAUDE_WORKER_POOL_SIZE=4
CLAUDE_MAX_QUEUE_SIZE=50

# ============================================================================
# External Project Directory
# ============================================================================

# Mount an external project directory to /home/devuser/workspace/project
# Leave empty to disable external project mounting
PROJECT_DIR=

# Host user home directory (for copying .claude auth)
HOST_HOME=${HOME}
