{
  "mcpServers": {
    "claude-flow": {
      "command": "npx",
      "args": ["claude-flow@latest", "mcp", "start"],
      "type": "stdio"
    },
    "ruv-swarm": {
      "command": "npx",
      "args": ["ruv-swarm@latest", "mcp", "start"],
      "type": "stdio"
    },
    "blender-mcp": {
      "command": "node",
      "args": ["/app/core-assets/scripts/mcp-blender-client.js"],
      "type": "stdio",
      "env": {
        "BLENDER_HOST": "localhost",
        "BLENDER_PORT": "9876"
      }
    },
    "qgis-mcp": {
      "command": "python3",
      "args": ["-u", "/app/core-assets/mcp-tools/qgis_mcp.py"],
      "type": "stdio",
      "env": {
        "QGIS_HOST": "localhost",
        "QGIS_PORT": "9877"
      }
    },
    "kicad-mcp": {
      "command": "python3",
      "args": ["-u", "/app/core-assets/mcp-tools/kicad_mcp.py"],
      "type": "stdio"
    },
    "ngspice-mcp": {
      "command": "python3",
      "args": ["-u", "/app/core-assets/mcp-tools/ngspice_mcp.py"],
      "type": "stdio"
    },
    "imagemagick-mcp": {
      "command": "python3",
      "args": ["-u", "/app/core-assets/mcp-tools/imagemagick_mcp.py"],
      "type": "stdio"
    },
    "pbr-generator-mcp": {
      "command": "python3",
      "args": ["-u", "/app/core-assets/mcp-tools/pbr_mcp_client.py"],
      "type": "stdio",
      "env": {
        "PBR_HOST": "localhost",
        "PBR_PORT": "9878"
      }
    },
    "playwright-visual": {
      "command": "node",
      "args": ["/app/core-assets/scripts/playwright-mcp-client.js"],
      "type": "stdio",
      "env": {
        "PLAYWRIGHT_PROXY_HOST": "localhost",
        "PLAYWRIGHT_PROXY_PORT": "9879"
      }
    },
    "playwright": {
      "command": "node",
      "args": ["/app/core-assets/scripts/playwright-mcp-local.js"],
      "type": "stdio"
    },
    "web-summary": {
      "command": "/opt/venv312/bin/python3",
      "args": ["-u", "/opt/web-summary-mcp-server.py"],
      "type": "stdio",
      "env": {
        "GOOGLE_API_KEY": "${GOOGLE_API_KEY}"
      }
    }
  }
}