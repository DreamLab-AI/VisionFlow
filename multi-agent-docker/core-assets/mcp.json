{
  "mcpServers": {
    "claude-flow": {
      "command": "npx",
      "args": ["claude-flow@latest", "mcp", "start"],
      "type": "stdio"
    },
    "ruv-swarm": {
      "command": "npx",
      "args": ["ruv-swarm@latest", "mcp", "start"],
      "type": "stdio"
    },
    "blender-mcp": {
      "command": "node",
      "args": ["./scripts/mcp-blender-client.js"],
      "type": "stdio",
      "env": {
        "BLENDER_HOST": "gui-tools-service",
        "BLENDER_PORT": "9876"
      }
    },
    "qgis-mcp": {
      "command": "python3",
      "args": ["-u", "./mcp-tools/qgis_mcp.py"],
      "type": "stdio",
      "env": {
        "QGIS_HOST": "gui-tools-service",
        "QGIS_PORT": "9875"
      }
    },
    "kicad-mcp": {
      "command": "python3",
      "args": ["-u", "./mcp-tools/kicad_mcp.py"],
      "type": "stdio"
    },
    "ngspice-mcp": {
      "command": "python3",
      "args": ["-u", "./mcp-tools/ngspice_mcp.py"],
      "type": "stdio"
    },
    "imagemagick-mcp": {
      "command": "python3",
      "args": ["-u", "./mcp-tools/imagemagick_mcp.py"],
      "type": "stdio"
    },
    "pbr-generator-mcp": {
      "command": "python3",
      "args": ["-u", "./mcp-tools/pbr_mcp_client.py"],
      "type": "stdio",
      "env": {
        "PBR_HOST": "gui-tools-service",
        "PBR_PORT": "9878"
      }
    },
    "playwright-visual": {
      "command": "node",
      "args": ["./scripts/playwright-mcp-client.js"],
      "type": "stdio",
      "env": {
        "PLAYWRIGHT_PROXY_HOST": "gui-tools-service",
        "PLAYWRIGHT_PROXY_PORT": "9879"
      }
    },
    "playwright": {
      "command": "node",
      "args": ["./scripts/playwright-mcp-local.js"],
      "type": "stdio"
    }
  }
}