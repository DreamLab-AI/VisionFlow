{
  "version": "3.0.0",
  "memory": {
    "backend": "postgres",
    "postgres": {
      "host": "ruvector-postgres",
      "port": 5432,
      "database": "ruvector",
      "user": "ruvector",
      "password": "ruvector_secure_pass",
      "ssl": false,
      "connectionTimeout": 10000,
      "maxConnections": 20
    },
    "fallback": "sqlite",
    "enableHNSW": true,
    "cacheSize": 256,
    "useExternal": true
  },
  "swarm": {
    "topology": "hierarchical-mesh",
    "maxAgents": 15,
    "strategy": "specialized"
  },
  "neural": {
    "enabled": true,
    "backend": "postgres"
  }
}
