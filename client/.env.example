# ===========================================
# VisionFlow Client Environment Configuration
# ===========================================
# Copy to .env and configure for your environment
# Use .env.local for sensitive local overrides (gitignored)

# ===========================================
# Network Configuration
# ===========================================
# Development server port
VITE_DEV_SERVER_PORT=5173

# HMR (Hot Module Replacement) configuration for Docker/proxy setups
VITE_HMR_CLIENT_PORT=3001
VITE_HMR_PATH=/vite-hmr

# Allowed hosts (comma-separated) - add your dev machine IP here
VITE_ALLOWED_HOSTS=www.visionflow.info,visionflow.info,localhost,127.0.0.1

# Local network IP for development (set to your machine's IP)
# Find with: hostname -I | awk '{print $1}'
VITE_LOCAL_DEV_IP=

# ===========================================
# API Configuration
# ===========================================
# Backend API URL (container name for Docker, localhost for local dev)
VITE_API_URL=http://visionflow_container:4000

# WebSocket URL (for real-time updates)
VITE_WS_URL=ws://visionflow_container:4000

# Public API base path
VITE_API_BASE_PATH=/api

# ===========================================
# Authentication
# ===========================================
# Dev mode power user pubkey (Nostr hex public key)
# Only used when VITE_DEV_MODE_AUTH=true
VITE_DEV_POWER_USER_PUBKEY=

# Enable dev mode auto-authentication
# WARNING: NEVER enable in production! Only for local development.
# When true, bypasses NIP-07 and auto-logs in as power user
VITE_DEV_MODE_AUTH=false

# ===========================================
# Vircadia Multi-User XR Configuration
# ===========================================
VITE_VIRCADIA_SERVER_URL=ws://localhost:3020/world/ws
VITE_VIRCADIA_AUTH_TOKEN=your-system-token-here
VITE_VIRCADIA_AUTH_PROVIDER=system
VITE_VIRCADIA_ENABLED=true
VITE_VIRCADIA_SYNC_GROUP=public.NORMAL
VITE_VIRCADIA_ENABLE_MULTI_USER=true
VITE_VIRCADIA_ENABLE_SPATIAL_AUDIO=false

# ===========================================
# Quest 3 XR Settings
# ===========================================
VITE_QUEST3_AUTO_CONNECT_VIRCADIA=true
VITE_QUEST3_ENABLE_HAND_TRACKING=true
VITE_QUEST3_ENABLE_PASSTHROUGH=true

# ===========================================
# Performance Configuration
# ===========================================
VITE_VIRCADIA_BATCH_SIZE=100
VITE_VIRCADIA_SYNC_INTERVAL_MS=100
VITE_VIRCADIA_MAX_RECONNECT_ATTEMPTS=5
VITE_VIRCADIA_RECONNECT_DELAY_MS=5000

# Three.js Rendering Optimization
VITE_INSTANCED_RENDERING=true
VITE_ENABLE_LOD=true
VITE_MAX_RENDER_DISTANCE=50

# ===========================================
# Logging & Debug
# ===========================================
VITE_LOG_LEVEL=info
VITE_VIRCADIA_DEBUG=false
VITE_VIRCADIA_SUPPRESS_LOGS=false

# Console logging (can be toggled at runtime via Control Center)
VITE_CONSOLE_LOGGING=true

# ===========================================
# Feature Flags
# ===========================================
VITE_ENABLE_BINARY_PROTOCOL=true
VITE_ENABLE_SHARED_ARRAY_BUFFER=true
VITE_ENABLE_GPU_COMPUTE=true

# ===========================================
# Security Notes
# ===========================================
# - VITE_ prefix exposes vars to client code (public!)
# - Do NOT put secrets in VITE_ variables
# - Use .env.local for sensitive local overrides
# - Never commit real credentials
