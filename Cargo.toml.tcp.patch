# Add these to your Cargo.toml

[[bin]]
name = "test-tcp"
path = "src/bin/test_tcp_connection.rs"

[dependencies]
# Existing dependencies...

# Add/ensure these for TCP support
tokio = { version = "1.35", features = ["full"] }
tokio-util = { version = "0.7", features = ["codec"] }
async-trait = "0.1"
bytes = "1.5"

# For buffered I/O
tokio-stream = "0.1"

# Logging
log = "0.4"
env_logger = "0.11"