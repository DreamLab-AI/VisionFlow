+                            if let Some(physics) = profile_config.get("physics") {
+                                match self.migrate_physics_profile(profile_name_str, physics) {
+                                    Ok(_) => {
+                                        count += 1;
+                                        debug!("Migrated physics profile: {}", profile_name_str);
+                                    }
+                                    Err(e) => {
+                                        warn!("Failed to migrate physics profile '{}': {}",
+                                              profile_name_str, e);
+                                    }
+                                }
+                            }
+                        }
+                    }
+                }
+            }
+        }
+
+        Ok(count)
+    }
