+                "#,
+                params![id],
+                |row| Ok((row.get(0)?, row.get(1)?, row.get(2)?, row.get(3)?, row.get(4)?)),
+            )
+            .optional()?;
+
+        if let Some((id, source_file, title, content_hash, downloaded_at)) = block_data {
+            let downloaded_at = DateTime::parse_from_rfc3339(&downloaded_at)?
+                .with_timezone(&Utc);
