+    async fn list_directory(&self, path: &str) -> Result<Vec<GitHubFile>> {
+        let url = format!(
+            "https://api.github.com/repos/{}/{}/contents/{}",
+            self.config.repo_owner,
+            self.config.repo_name,
+            path
+        );
