+            let owl_content = self.get_owl_content(&conn, &id)?;
+            let classes = self.get_classes(&conn, &id)?;
+            let properties_list = self.get_owl_properties(&conn, &id)?;
+            let relationships = self.get_relationships(&conn, &id)?;
